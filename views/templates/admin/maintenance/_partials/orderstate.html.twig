<div class="col-xl-6">
  <div class="card">

    <h3 class="card-header">
      <i class="material-icons">money</i> {{ 'Order States'|trans({}, 'Modules.Pslegalcompliance.Admin') }}
    </h3>

    <div class="card-body">
      <p>{{ 'This list shows all order statuses that this module installs. If an order status is not installed correctly, you can reset it here.'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</p>

      {% if orderstates is not empty %}
      <table class="orderstate_list table">
        <thead>
          <tr>
            <th>{{ 'Name'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</th>
            <th>{{ 'Status'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</th>
          </tr>
        </thead>
        <tbody>
          {% for orderstate in orderstates %}
          <tr>
            <td>{{ orderstate.name }}</td>
            <td>
              {% if not orderstate.valid %}
              <span class="badge badge-warning">{{ 'missing!'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</span>
              {% else %}
              <span class="badge badge-success">{{ 'ok'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</span>
              {% endif %}
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      {% else %}
      <p class="alert alert-info">{{ 'There are no orderstates for this module to install'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</p>
      {% endif %}
    </div>

    <div class="card-footer">
      <div class="d-flex justify-content-end">
        <a class="btn btn-primary" href="{{ path('ps_legalcompliance_maintenance_orderstate_reset') }}">{{ 'Install missing orderstates'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</a>
      </div>
    </div>

  </div>
</div>
