<div class="col-xl-6">
  <div class="card">

    <h3 class="card-header">
      <i class="material-icons">save</i> {{ 'Controller'|trans({}, 'Modules.Pslegalcompliance.Admin') }}
    </h3>

    <div class="card-body">
      <p>{{ 'This list shows the controller that installs this module. If a controller values are not installed correctly, you can reset them here.'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</p>

      {% if controller is not empty %}
      <table class="controller_list table">
        <thead>
          <tr>
            <th>{{ 'Name'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</th>
            <th>{{ 'Status'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</th>
          </tr>
        </thead>
        <tbody>
          {% for value in controller %}
          <tr>
            <td>{{ value.name }}</td>
            <td>
              {% if not value.valid %}
              <span class="badge badge-warning">{{ 'missing!'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</span>
              {% else %}
              <span class="badge badge-success">{{ 'ok'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</span>
              {% endif %}
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      {% else %}
      <p class="alert alert-info">{{ 'There are no controllers for this module to install'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</p>
      {% endif %}
    </div>

    <div class="card-footer">
      <div class="d-flex justify-content-end">
        <a class="btn btn-primary" href="{{ path('ps_legalcompliance_maintenance_controller_reset') }}">{{ 'Install missing controller'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</a>
      </div>
    </div>

  </div>
</div>
