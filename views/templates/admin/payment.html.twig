{% form_theme paymentForm with [
  '@PrestaShop/Admin/TwigTemplateForm/prestashop_ui_kit.html.twig',
  '@Modules/ps_legalcompliance/views/templates/admin/fields.html.twig'
] %}

{% block content %}
  {{ form_start(paymentForm) }}
    <div class="row justify-content-center">
      <div class="col-xl-10">
        <div class="card">
          <h3 class="card-header">
            <i class="material-icons">money</i> {{ 'Payment Configuration'|trans({}, 'Modules.Pslegalcompliance.Admin') }}
          </h3>

          <div class="card-body">
            <div class="form-wrapper">
              {{ form_widget(paymentForm) }}
            </div>
          </div>

          <div class="card-footer">
            <div class="d-flex justify-content-end">
              <button class="btn btn-primary">{{ 'Save'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{ form_end(paymentForm) }}
{% endblock %}
