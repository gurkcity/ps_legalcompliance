{% extends '@Modules/ps_legalcompliance/views/templates/admin/header/moduleheader.html.twig' %}

{% trans_default_domain "Modules.Legalcompliance.Admin" %}

{% form_theme virtualForm '@PrestaShop/Admin/TwigTemplateForm/prestashop_ui_kit.html.twig' %}

{% block content %}
  {{ form_start(virtualForm, {action: path('legalcompliance_virtual_save') }) }}
  <div class="card" id="pslegalcompliance_virtual_form">
    <h3 class="card-header">
      <i class="material-icons">settings</i>
      {{ 'Virtual Products'|trans }}
    </h3>
    <div class="card-body">
      <div class="form-wrapper">
        {{ form_widget(virtualForm) }}
      </div>
    </div>
    <div class="card-footer">
      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
      </div>
    </div>
  </div>
  {{ form_end(virtualForm) }}
{% endblock %}

{% block extra_javascripts %}
  {{ parent() }}
  <script>
  $(() => {
    window.prestashop.component.initComponents([
      'TranslatableField',
      'TinyMCEEditor',
      'TranslatableInput',
    ]);
  });
  </script>
{% endblock %}
