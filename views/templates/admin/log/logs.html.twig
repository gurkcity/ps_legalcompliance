{% extends '@Modules/ps_legalcompliance/views/templates/admin/header/moduleheader.html.twig' %}
{% form_theme form '@PrestaShop/Admin/TwigTemplateForm/prestashop_ui_kit.html.twig' %}

{% block content %}
<div class="row justify-content-center">
  <div class="col-xl-6">
    <div class="card">
      <h3 class="card-header">
        <i class="material-icons">assignment</i> {{ 'Existing Logs'|trans({}, 'Modules.Pslegalcompliance.Admin') }}
      </h3>

      <div class="card-body">
        {% if logFiles is not empty %}
        <table class="table log_files_list">
          <thead>
            <tr>
              <th>{{ 'File'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</th>
              <th>{{ 'Size'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</th>
              <th>{{ 'Action'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</th>
            </tr>
          </thead>
          <tbody>
          {% for file in logFiles %}
            <tr>
              <td><a href="{{ path('ps_legalcompliance_logs_view', {'filename': file.filename}) }}" target="_blank">{{ file.filename }}</a></td>
              <td>{{ file.size }}</td>
              <td><a href="{{ path('ps_legalcompliance_logs_delete', {'filename': file.filename}) }}" title="{{ 'delete'|trans({}, 'Modules.Pslegalcompliance.Admin') }}"><i class="material-icons">delete</i></a></td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
        {% else %}
        <p class="alert alert-info">{{ 'There are no logfiles yet'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</p>
        {% endif %}
      </div>
      <div class="card-footer">
        <div class="d-flex justify-content-end">
          {% if logFiles is not empty %}
          <a class="btn btn-primary" href="{{ path('ps_legalcompliance_logs_clear') }}">{{ 'Clear Logs'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  <div class="col-xl-6">
    {{ form_start(form) }}
    <div class="card">
      <h3 class="card-header">
        <i class="material-icons">settings</i> {{ 'Log Settings'|trans({}, 'Modules.Pslegalcompliance.Admin') }}
      </h3>

      <div class="card-body">
        <div class="form-wrapper">
          {{ form_widget(form) }}
        </div>
      </div>
      <div class="card-footer">
        <div class="d-flex justify-content-end">
          <button class="btn btn-primary">{{ 'Save'|trans({}, 'Modules.Pslegalcompliance.Admin') }}</button>
        </div>
      </div>
    </div>
    {{ form_end(form) }}
  </div>
</div>
{% endblock %}
