{% extends '@Modules/ps_legalcompliance/views/templates/admin/header/moduleheader.html.twig' %}

{% block content %}
  {% block example_listing %}
    {% include '@PrestaShop/Admin/Common/Grid/grid_panel.html.twig' with {'grid': exampleGrid} %}
  {% endblock %}
{% endblock %}

{% block javascripts %}
  <script>
  $(() => {
    window.prestashop.component.initComponents(['Grid']);

    const exampleGrid = new window.prestashop.component.Grid('examplegrid');

    exampleGrid.addExtension(new window.prestashop.component.GridExtensions.FiltersResetExtension());
    exampleGrid.addExtension(new window.prestashop.component.GridExtensions.SortingExtension());
    exampleGrid.addExtension(new window.prestashop.component.GridExtensions.SubmitRowActionExtension());
    exampleGrid.addExtension(new window.prestashop.component.GridExtensions.ExportToSqlManagerExtension());
    exampleGrid.addExtension(new window.prestashop.component.GridExtensions.FiltersSubmitButtonEnablerExtension());
    exampleGrid.addExtension(new window.prestashop.component.GridExtensions.BulkActionCheckboxExtension());
    exampleGrid.addExtension(new window.prestashop.component.GridExtensions.AjaxBulkActionExtension());
    exampleGrid.addExtension(new window.prestashop.component.GridExtensions.SubmitBulkActionExtension());
    exampleGrid.addExtension(new window.prestashop.component.GridExtensions.BulkOpenTabsExtension());
  });
  </script>
{% endblock %}
